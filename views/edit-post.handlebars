<div class="card">
  <div class="card-body">
    <h3 class="card-title">Edit Post</h3>
    <form id="edit-post-form">
        <div class="form-group">
            <label for="post-title">Title</label>
            <input type="text" class="form-control" name="post-title" value="{{post.title}}">
        </div>
        <div class="form-group">
            <label for="post-content">Body</label>
            <textarea class="form-control" name="post-content" rows="3">{{post.post-content}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-danger">Delete</button>
    </form>
  </div>
</div>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>