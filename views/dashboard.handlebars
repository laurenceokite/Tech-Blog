<div class="card">
  <div class="card-body">
    <h3 class="card-title">Create New Post</h3>
    <form id="new-post-form">
        <div class="form-group">
            <label for="post-title">Title</label>
            <input type="text" class="form-control" name="post-title">
        </div>
        <div class="form-group">
            <label for="post-content">Body</label>
            <textarea class="form-control" name="post-content" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
{{#if posts.length}}
{{#each posts as |post|}}
<div class="card mt-2">
    <div class="card-body">
        <h5><a href="/post/{{post.id}}" class="card-title">{{post.title}}</a></h5>
        <div class="card-text">
            {{post.post_content}}
            <br>
            <span style="font-size: smaller;">
                by {{post.user.username}} on {{post.created_at}}
                <br>
                <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
            </span>
        </div>
        <button class="btn btn-danger m-1">Edit</button>
    </div>
</div>
{{/each}}
{{/if}}
<script src="/javascript/add-post.js"></script>